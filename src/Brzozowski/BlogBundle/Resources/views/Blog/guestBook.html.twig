{% extends "BrzozowskiBlogBundle:Blog:sidebarLayout.html.twig" %}

    {% block pageTitle %}
        Księga gości | {{ parent() }}
    {% endblock %}

    {% block contentContainer %}
        <article class="col-md-8 journal">
            <h1>Inwestorzy o blogu</h1>

            {#{% autoescape false %}#}
                <div class="guest-book"></div>
                {% for entry in comments %}
                <section>
                    <h4>{{ entry['name']|raw }}</h4>
                    <p>{{ entry['comment'] }}</p>
                </section>
                {% endfor %}
            {#{% endautoescape %}#}


        </article>
    {% endblock %}